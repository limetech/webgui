<script>
var vmusage = new NchanSubscriber('/sub/vm_usage',{subscriber:'websocket'});
vmusage.on('message', function(msg){
  var data = JSON.parse(msg);
  $('#vmstatsbody').html(data);
  });

$(function(){
  vmusage.start();
});

window.onunload = function(){
  vmusage.stop();
}
</script>